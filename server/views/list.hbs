<h1>Bookmarks</h1>

<form action="editView" method="get">
    <input type="submit" value="+">
</form>

<div class="row">
    {{# each bookmarks}}
        <div class="card col-2">
            <form action="editView" method="get">
                <h2>{{this.title}}</h2>
                <p><a rel="nofollow" rel="noreferrer" href="#">{{this.url}}</a></p>
                <p class="text">{{this.note}}</p>
                <ul class="menu-content">
                    {{# each this.tags}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <input type="hidden" value="{{this.id}}" name="id"/>
                <input type="submit" value="Edit" data-id="{{this.id}}"/>
                <input type="button" value="Delete" data-id="{{this.id}}" class="bookmark-delete"/>
            </form>
        </div>
    {{/ each }}
</div>